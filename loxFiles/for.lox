print "Using assignment expression as initializer";
var a;
for (a = 0; a < 5; a = a + 1) print a;

print "Using variable declaration as initializer";
for (var b = 5; b > 0; b = b - 1) print b;

print ("No initializer");
a = 4;
for (; a >= 0; a = a - 1){
    print a;
}

print("No update");
a = 5;
for (; a > 0;){
    print a;
    a = a - 1;
}
